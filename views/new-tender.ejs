<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Yeni İhale Ekle</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>
  <style>
    .ck-editor__editable_inline { min-height: 200px; }
  </style>
</head>
<body class="bg-light">
  
    <div class="container mt-5">
        <a href="/dashboard" class="btn btn-secondary mb-3">← Panele Dön</a>
        
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h4>Yeni İhale Başlat</h4>
            </div>
            <div class="card-body">
                <form action="/add-tender" method="post" enctype="multipart/form-data">
                    
                    <div class="mb-3">
                        <label class="form-label">İhale Başlığı</label>
                        <input type="text" class="form-control" name="title" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ürün Görseli</label>
                        <input type="file" class="form-control" name="resim">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        <select class="form-select" name="category_id" required>
                        <option value="" selected disabled>Lütfen bir kategori seçin...</option>
                        <% categories.forEach(cat => { %>
                        <option value="<%= cat.category_id %>"><%= cat.name %></option>
                        <% }) %>
                        </select>
                        </div>

                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea class="form-control" name="description" id="editor"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Başlangıç Fiyatı (TL)</label>
                            <input type="number" class="form-control" name="start_price" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Bitiş Tarihi</label>
                            <input type="datetime-local" class="form-control" name="end_date" required>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Yayınla</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => { console.error(error); });
    </script>

</body>
</html>