<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>İhale Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700;800&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

     
        .navbar-brand {
            font-family: 'Outfit', sans-serif;
            letter-spacing: -0.5px;
            display: flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }

        .brand-icon-box {
            width: 42px;
            height: 42px;
            /* Modern Gradyan Arka Plan */
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            color: white;
            border-radius: 12px; /* Hafif yuvarlatılmış kare */
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
            box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3); /* Hafif mavi gölge */
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover .brand-icon-box {
            transform: rotate(-10deg) scale(1.05); /* Üzerine gelince ikon hafif döner */
        }

        .brand-text-main {
            font-weight: 800; /* Çok kalın */
            font-size: 1.35rem;
            color: white;
            line-height: 1;
        }

        .brand-text-sub {
            font-weight: 300; /* İnce */
            color: rgba(255,255,255,0.6);
            font-size: 0.9rem;
        }
        /* --------------------------- */

        /* Üst Kontrol Çubuğu */
        .control-bar {
            background: white;
            border-bottom: 1px solid #eee;
            padding: 15px 0;
            position: sticky;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 15px rgba(0,0,0,0.03);
        }

        /* Kategori Seçim Alanı (Gizli Panel) */
        .category-panel {
            background: white;
            border-bottom: 1px solid #eee;
            box-shadow: inset 0 5px 10px rgba(0,0,0,0.02);
        }

        .cat-btn {
            display: block;
            width: 100%;
            text-align: left;
            padding: 10px 15px;
            border-radius: 8px;
            border: 1px solid #e9ecef;
            background: white;
            color: #495057;
            transition: all 0.2s;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .cat-btn:hover {
            background-color: #f1f3f5;
            color: #212529;
            transform: translateX(5px);
        }

        .cat-btn.active {
            background-color: #212529;
            color: white;
            border-color: #212529;
        }
        .cat-btn.active:hover {
            transform: none;
        }
        
        /* Kart Tasarımı */
        .tender-card {
            border: none;
            border-radius: 12px;
            background: white;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }
        .tender-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.08);
        }

        .card-img-wrap {
            height: 220px;
            overflow: hidden;
            position: relative;
            border-radius: 12px 12px 0 0;
            background-color: #f1f3f5;
        }
        
        .status-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 0.75rem;
            padding: 6px 12px;
            border-radius: 50px;
            font-weight: 600;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        main { flex: 1; }
        footer { margin-top: auto; background: #212529; padding: 40px 0; color: #adb5bd; }

        @keyframes pulse-red { 0% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); } 70% { box-shadow: 0 0 0 10px rgba(220, 53, 69, 0); } 100% { box-shadow: 0 0 0 0 rgba(220, 53, 69, 0); } }
        .live-pulse { animation: pulse-red 2s infinite; }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <div class="container">
            <a class="navbar-brand" href="/">
                <div class="brand-icon-box">
                    <i class="fas fa-gavel"></i> </div>
                <div>
                    <span class="brand-text-main">İHALE</span>
                    <span class="brand-text-sub">SİSTEMİ</span>
                </div>
            </a>
            <div class="d-flex gap-2">
                <a href="/dashboard" class="btn btn-outline-light btn-sm rounded-pill px-3 fw-bold border-2">
                    <i class="fas fa-user me-1"></i> Panelim
                </a>
                <a href="/logout" class="btn btn-danger btn-sm rounded-pill px-3 fw-bold">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="control-bar">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                
                <div class="btn-group shadow-sm" role="group">
                    <a href="/?durum=tumu&kategori=<%= seciliKategori %>" class="btn btn-sm <%= seciliFiltre === 'tumu' ? 'btn-dark' : 'btn-white border text-muted' %> fw-bold px-3">Tümü</a>
                    <a href="/?durum=aktif&kategori=<%= seciliKategori %>" class="btn btn-sm <%= seciliFiltre === 'aktif' ? 'btn-success' : 'btn-white border text-muted' %> fw-bold px-3">Aktif</a>
                    <a href="/?durum=kapali&kategori=<%= seciliKategori %>" class="btn btn-sm <%= seciliFiltre === 'kapali' ? 'btn-secondary' : 'btn-white border text-muted' %> fw-bold px-3">Biten</a>
                </div>

                <button class="btn btn-outline-dark fw-bold shadow-sm d-flex align-items-center gap-2" type="button" data-bs-toggle="collapse" data-bs-target="#kategoriMenu">
                    <% 
                       const seciliKatAd = categories.find(c => c.category_id == seciliKategori);
                       const butonYazisi = seciliKategori === 'hepsi' ? 'Kategori Seç' : (seciliKatAd ? seciliKatAd.name : 'Kategori Seç');
                    %>
                    <i class="fas fa-filter"></i> 
                    <span><%= butonYazisi %></span>
                    <i class="fas fa-chevron-down small ms-1"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="collapse <%= seciliKategori !== 'hepsi' ? '' : '' %>" id="kategoriMenu">
        <div class="category-panel py-4">
            <div class="container">
                <div class="row g-3">
                    <div class="col-6 col-md-3 col-lg-2">
                        <a href="/?durum=<%= seciliFiltre %>&kategori=hepsi" 
                           class="cat-btn <%= seciliKategori === 'hepsi' ? 'active' : '' %>">
                            <i class="fas fa-th-large me-2"></i> Tüm Kategoriler
                        </a>
                    </div>
                    
                    <% categories.forEach(cat => { %>
                        <div class="col-6 col-md-3 col-lg-2">
                            <a href="/?durum=<%= seciliFiltre %>&kategori=<%= cat.category_id %>" 
                               class="cat-btn <%= Number(seciliKategori) === cat.category_id ? 'active' : '' %>">
                                <%= cat.name %>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <main class="container py-4">
        
        <div class="d-flex align-items-center justify-content-between mb-4 pb-2 border-bottom">
            <h4 class="fw-bold text-dark m-0">
                <% if(seciliKategori !== 'hepsi' && seciliKatAd) { %>
                    <span class="text-primary"><%= seciliKatAd.name %></span> <span class="text-muted fs-6">kategorisi</span>
                <% } else { %>
                    <span class="text-dark">Vitrin</span>
                <% } %>
            </h4>
            <span class="text-muted small fw-bold"><%= ihaleler.length %> İlan Listelendi</span>
        </div>

        <div class="row g-4">
            
            <% if (ihaleler.length === 0) { %>
                <div class="col-12 text-center py-5">
                    <div class="mb-3 text-muted opacity-25">
                        <i class="fas fa-box-open fa-4x"></i>
                    </div>
                    <h5 class="fw-bold text-secondary">İlan Bulunamadı</h5>
                    <p class="text-muted small">Seçtiğiniz kriterlerde aktif bir ihale yok.</p>
                    <a href="/" class="btn btn-primary btn-sm rounded-pill px-4">Tümünü Göster</a>
                </div>
            <% } %>

            <% ihaleler.forEach(ihale => { 
                let minTeklif = ihale.en_yuksek_teklif ? Number(ihale.en_yuksek_teklif) + 1 : Number(ihale.start_price);
                let formatPara = (tutar) => new Intl.NumberFormat('tr-TR', { minimumFractionDigits: 2 }).format(tutar);
            %>
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card tender-card h-100">
                        <div class="card-img-wrap">
                            <% if (ihale.image_url) { %>
                                <img src="/static/images/<%= ihale.image_url %>" class="w-100 h-100" style="object-fit: cover;">
                            <% } else { %>
                                <div class="d-flex align-items-center justify-content-center h-100 text-secondary">
                                    <i class="fas fa-image fa-2x opacity-25"></i>
                                </div>
                            <% } %>
                            
                            <% if(ihale.Category) { %>
                                <div class="position-absolute top-0 start-0 m-3">
                                    <span class="badge bg-dark bg-opacity-75 fw-normal">
                                        <%= ihale.Category.name %>
                                    </span>
                                </div>
                            <% } %>

                            <% if (new Date(ihale.end_date) > new Date() && ihale.status == 1) { %>
                                <span class="status-badge bg-danger text-white live-pulse">
                                    CANLI
                                </span>
                            <% } else { %>
                                <span class="status-badge bg-secondary text-white">
                                    BİTTİ
                                </span>
                            <% } %>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title fw-bold text-dark mb-1 text-truncate" title="<%= ihale.title %>">
                                <%= ihale.title %>
                            </h6>
                            
                            <div class="mt-auto pt-3">
                                <p class="mb-1 text-muted small fw-bold" style="font-size: 10px;">GÜNCEL FİYAT</p>
                                <h4 class="fw-bold text-primary mb-3">
                                    <%= formatPara(ihale.en_yuksek_teklif ? ihale.en_yuksek_teklif : ihale.start_price) %> <small class="fs-6">₺</small>
                                </h4>

                                <div class="bg-light rounded p-2 d-flex justify-content-between align-items-center mb-3 border">
                                    <i class="far fa-clock text-muted"></i>
                                    <span class="countdown fw-bold text-dark small" data-time="<%= ihale.end_date %>">--:--:--</span>
                                </div>

                                <% if (new Date(ihale.end_date) > new Date() && ihale.status == 1) { %>
                                    <form action="/bid" method="post" class="d-flex gap-2 bid-form">
                                        <input type="hidden" name="tender_id" value="<%= ihale.tender_id %>">
                                        <input type="number" name="amount" class="form-control form-control-sm" placeholder="Teklif Ver" min="<%= minTeklif %>" required>
                                        <button class="btn btn-dark btn-sm px-3" type="submit">Ver</button>
                                    </form>
                                <% } else { %>
                                    <button class="btn btn-secondary btn-sm w-100 disabled" disabled>Süre Doldu</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>

        </div>
    </main>

    <footer class="text-center">
        <small>&copy; 2025 İhale Sistemi. Tüm hakları saklıdır.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sayaç
        setInterval(() => {
            document.querySelectorAll('.countdown').forEach(el => {
                const end = new Date(el.dataset.time).getTime();
                const now = new Date().getTime();
                const diff = end - now;

                if (diff < 0) {
                    el.innerText = "SÜRE DOLDU";
                    el.classList.add('text-danger');
                } else {
                    const d = Math.floor(diff / (1000 * 60 * 60 * 24));
                    const h = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                    const m = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                    const s = Math.floor((diff % (1000 * 60)) / 1000);
                    el.innerText = d > 0 ? `${d}g ${h}s ${m}dk` : `${h}:${m}:${s}`;
                }
            });
        }, 1000);

        // Buton Efekti
        document.querySelectorAll('.bid-form').forEach(f => {
            f.addEventListener('submit', function() {
                const b = this.querySelector('button');
                b.disabled = true;
                b.innerHTML = '...';
            });
        });
    </script>
</body>
</html>